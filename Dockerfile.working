FROM python:3.11-slim
WORKDIR /app

# Копируем локальные пакеты
COPY packages/*.whl /tmp/packages/

# Устанавливаем из локальных файлов
RUN pip install --no-index --find-links=/tmp/packages \
    fastapi \
    uvicorn \
    httpx

# Копируем код
COPY backend/app/main.py .

EXPOSE 8000
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
