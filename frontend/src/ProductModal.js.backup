import React, { useState, useEffect } from 'react';

const API_BASE = window.location.hostname === 'localhost' 
    ? 'http://localhost:8000' 
    : 'https://metodika-coffee.ru';

function ProductModal({ product, isOpen, onClose, onAddToCart }) {
    const [detailedProduct, setDetailedProduct] = useState(null);
    const [selectedSize, setSelectedSize] = useState(null);
    const [selectedAddons, setSelectedAddons] = useState([]);
    const [sugarCount, setSugarCount] = useState(0);
    const [cinnamon, setCinnamon] = useState(false);
    const [quantity, setQuantity] = useState(1);
    const [loading, setLoading] = useState(false);

    useEffect(() => {
        if (isOpen && product) {
            fetchProductDetails();
        }
    }, [isOpen, product]);

    const fetchProductDetails = async () => {
        try {
            const response = await fetch(`${API_BASE}/api/products/${product.id}`);
            const data = await response.json();
            setDetailedProduct(data);
            
            // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ä–∞–∑–º–µ—Ä –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é (M)
            if (data.has_sizes && data.sizes.length > 0) {
                const defaultSize = data.sizes.find(s => s.size === "M") || data.sizes[0];
                setSelectedSize(defaultSize);
            }
        } catch (error) {
            console.error('Error fetching product details:', error);
        }
    };

    const handleAddonToggle = (addon) => {
        setSelectedAddons(prev => {
            const exists = prev.find(a => a.id === addon.id);
            if (exists) {
                return prev.filter(a => a.id !== addon.id);
            } else {
                return [...prev, { ...addon, quantity: 1 }];
            }
        });
    };

    const calculateTotalPrice = () => {
        if (!detailedProduct) return 0;
        
        let basePrice = 0;
        if (detailedProduct.has_sizes && selectedSize) {
            basePrice = selectedSize.price;
        } else {
            basePrice = detailedProduct.default_price || 0;
        }
        
        const addonsPrice = selectedAddons.reduce((sum, addon) => sum + (addon.price * addon.quantity), 0);
        
        return (basePrice + addonsPrice) * quantity;
    };

    const handleAddToCart = () => {
        if (!detailedProduct) return;

        const itemName = selectedSize 
            ? `${product.name} (${selectedSize.size})`
            : product.name;

        const item = {
            product_id: product.id,
            name: itemName,
            size: selectedSize?.size || null,
            price: calculateTotalPrice() / quantity,
            quantity: quantity,
            category: product.category,
            subcategory: product.subcategory,
            addons: selectedAddons.map(addon => ({
                addon_id: addon.id,
                name: addon.name,
                price: addon.price,
                quantity: addon.quantity
            })),
            sugar: sugarCount,
            cinnamon: cinnamon
        };

        onAddToCart(item);
        resetModal();
        onClose();
    };

    const resetModal = () => {
        setSelectedSize(null);
        setSelectedAddons([]);
        setSugarCount(0);
        setCinnamon(false);
        setQuantity(1);
    };

    if (!isOpen || !detailedProduct) return null;

    return (
        <div style={{
            position: 'fixed',
            top: 0,
            left: 0,
            right: 0,
            bottom: 0,
            backgroundColor: 'rgba(0, 0, 0, 0.5)',
            display: 'flex',
            justifyContent: 'center',
            alignItems: 'center',
            zIndex: 1000,
            padding: '16px'
        }}>
            <div style={{
                backgroundColor: 'white',
                borderRadius: '20px',
                padding: '24px',
                maxWidth: '500px',
                width: '100%',
                maxHeight: '90vh',
                overflowY: 'auto',
                position: 'relative'
            }}>
                <button
                    onClick={() => {
                        resetModal();
                        onClose();
                    }}
                    style={{
                        position: 'absolute',
                        top: '16px',
                        right: '16px',
                        background: 'none',
                        border: 'none',
                        fontSize: '24px',
                        cursor: 'pointer',
                        color: '#666'
                    }}
                >
                    √ó
                </button>

                <h2 style={{ marginTop: 0, marginBottom: '8px' }}>
                    {product.name}
                </h2>
                <p style={{ color: '#666', marginBottom: '20px' }}>
                    {product.description}
                </p>

                {detailedProduct.has_sizes && detailedProduct.sizes.length > 0 && (
                    <div style={{ marginBottom: '20px' }}>
                        <h3 style={{ marginBottom: '12px', fontSize: '16px' }}>–†–∞–∑–º–µ—Ä</h3>
                        <div style={{ display: 'flex', gap: '8px' }}>
                            {detailedProduct.sizes.map(size => (
                                <button
                                    key={size.size}
                                    onClick={() => setSelectedSize(size)}
                                    style={{
                                        padding: '12px 16px',
                                        border: `2px solid ${selectedSize?.size === size.size ? '#667eea' : '#e2e8f0'}`,
                                        borderRadius: '12px',
                                        backgroundColor: selectedSize?.size === size.size ? '#667eea' : 'white',
                                        color: selectedSize?.size === size.size ? 'white' : '#333',
                                        cursor: 'pointer',
                                        flex: 1,
                                        textAlign: 'center'
                                    }}
                                >
                                    <div style={{ fontWeight: '600' }}>{size.size}</div>
                                    <div style={{ fontSize: '14px', opacity: 0.8 }}>{size.volume}</div>
                                    <div style={{ fontWeight: '700', marginTop: '4px' }}>{size.price} ‚ÇΩ</div>
                                </button>
                            ))}
                        </div>
                    </div>
                )}

                {detailedProduct.has_addons && (
                    <div style={{ marginBottom: '20px' }}>
                        <h3 style={{ marginBottom: '12px', fontSize: '16px' }}>–°–∞—Ö–∞—Ä</h3>
                        <div style={{ display: 'flex', alignItems: 'center', gap: '12px' }}>
                            <button
                                onClick={() => setSugarCount(Math.max(0, sugarCount - 1))}
                                disabled={sugarCount === 0}
                                style={{
                                    width: '36px',
                                    height: '36px',
                                    borderRadius: '50%',
                                    border: '2px solid #e2e8f0',
                                    background: 'white',
                                    fontSize: '20px',
                                    cursor: sugarCount === 0 ? 'not-allowed' : 'pointer',
                                    opacity: sugarCount === 0 ? 0.5 : 1
                                }}
                            >
                                -
                            </button>
                            <div style={{ 
                                display: 'flex', 
                                alignItems: 'center', 
                                gap: '4px',
                                minWidth: '80px',
                                justifyContent: 'center'
                            }}>
                                <span style={{ fontSize: '24px' }}>üç¨</span>
                                <span style={{ fontWeight: '600', fontSize: '16px' }}>{sugarCount}</span>
                            </div>
                            <button
                                onClick={() => setSugarCount(sugarCount + 1)}
                                style={{
                                    width: '36px',
                                    height: '36px',
                                    borderRadius: '50%',
                                    border: '2px solid #e2e8f0',
                                    background: 'white',
                                    fontSize: '20px',
                                    cursor: 'pointer'
                                }}
                            >
                                +
                            </button>
                        </div>
                    </div>
                )}

                {detailedProduct.has_addons && (
                    <div style={{ marginBottom: '20px' }}>
                        <h3 style={{ marginBottom: '12px', fontSize: '16px' }}>–î–æ–±–∞–≤–∏—Ç—å</h3>
                        <button
                            onClick={() => setCinnamon(!cinnamon)}
                            style={{
                                padding: '12px 16px',
                                border: `2px solid ${cinnamon ? '#48bb78' : '#e2e8f0'}`,
                                borderRadius: '12px',
                                backgroundColor: cinnamon ? '#48bb78' : 'white',
                                color: cinnamon ? 'white' : '#333',
                                cursor: 'pointer',
                                display: 'flex',
                                alignItems: 'center',
                                gap: '8px',
                                width: '100%'
                            }}
                        >
                            <span style={{ fontSize: '20px' }}>üåø</span>
                            <span>–ö–æ—Ä–∏—Ü–∞ {cinnamon ? '‚úì' : ''}</span>
                            <span style={{ marginLeft: 'auto', opacity: 0.8 }}>–ë–µ—Å–ø–ª–∞—Ç–Ω–æ</span>
                        </button>
                    </div>
                )}

                {detailedProduct.has_addons && detailedProduct.addons.length > 0 && (
                    <div style={{ marginBottom: '20px' }}>
                        <h3 style={{ marginBottom: '12px', fontSize: '16px' }}>–î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–æ</h3>
                        <div style={{ display: 'flex', flexDirection: 'column', gap: '8px' }}>
                            {detailedProduct.addons
                                .filter(addon => addon.type !== 'sugar' && addon.name !== '–ö–æ—Ä–∏—Ü–∞')
                                .map(addon => {
                                    const isSelected = selectedAddons.find(a => a.id === addon.id);
                                    return (
                                        <button
                                            key={addon.id}
                                            onClick={() => handleAddonToggle(addon)}
                                            style={{
                                                padding: '12px 16px',
                                                border: `2px solid ${isSelected ? '#667eea' : '#e2e8f0'}`,
                                                borderRadius: '12px',
                                                backgroundColor: isSelected ? '#667eea' : 'white',
                                                color: isSelected ? 'white' : '#333',
                                                cursor: 'pointer',
                                                display: 'flex',
                                                alignItems: 'center',
                                                justifyContent: 'space-between'
                                            }}
                                        >
                                            <span>{addon.name}</span>
                                            <span>{addon.price > 0 ? `+${addon.price} ‚ÇΩ` : '–ë–µ—Å–ø–ª–∞—Ç–Ω–æ'}</span>
                                        </button>
                                    );
                                })
                            }
                        </div>
                    </div>
                )}

                <div style={{ marginBottom: '20px' }}>
                    <h3 style={{ marginBottom: '12px', fontSize: '16px' }}>–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ</h3>
                    <div style={{ display: 'flex', alignItems: 'center', gap: '16px' }}>
                        <button
                            onClick={() => setQuantity(Math.max(1, quantity - 1))}
                            style={{
                                width: '40px',
                                height: '40px',
                                borderRadius: '50%',
                                border: '2px solid #e2e8f0',
                                background: 'white',
                                fontSize: '20px',
                                cursor: 'pointer'
                            }}
                        >
                            -
                        </button>
                        <span style={{ 
                            fontSize: '20px', 
                            fontWeight: '600',
                            minWidth: '40px',
                            textAlign: 'center'
                        }}>
                            {quantity}
                        </span>
                        <button
                            onClick={() => setQuantity(quantity + 1)}
                            style={{
                                width: '40px',
                                height: '40px',
                                borderRadius: '50%',
                                border: '2px solid #e2e8f0',
                                background: 'white',
                                fontSize: '20px',
                                cursor: 'pointer'
                            }}
                        >
                            +
                        </button>
                    </div>
                </div>

                <div style={{
                    position: 'sticky',
                    bottom: 0,
                    background: 'white',
                    paddingTop: '16px',
                    borderTop: '1px solid #e2e8f0',
                    marginTop: '20px'
                }}>
                    <div style={{
                        display: 'flex',
                        justifyContent: 'space-between',
                        alignItems: 'center',
                        marginBottom: '16px'
                    }}>
                        <div>
                            <div style={{ fontSize: '14px', color: '#666' }}>–ò—Ç–æ–≥–æ:</div>
                            <div style={{ fontSize: '24px', fontWeight: '700' }}>
                                {calculateTotalPrice()} ‚ÇΩ
                            </div>
                        </div>
                        <button
                            onClick={handleAddToCart}
                            disabled={loading || (detailedProduct.has_sizes && !selectedSize)}
                            style={{
                                padding: '16px 32px',
                                backgroundColor: '#48bb78',
                                color: 'white',
                                border: 'none',
                                borderRadius: '20px',
                                fontSize: '16px',
                                fontWeight: '600',
                                cursor: loading ? 'not-allowed' : 'pointer',
                                opacity: (detailedProduct.has_sizes && !selectedSize) ? 0.5 : 1
                            }}
                        >
                            {loading ? '–î–æ–±–∞–≤–ª—è–µ–º...' : '–î–æ–±–∞–≤–∏—Ç—å –≤ –∫–æ—Ä–∑–∏–Ω—É'}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    );
}

export default ProductModal;
